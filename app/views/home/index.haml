.abc-index
  .abc-left
    .menu-box
      - $this->_include('menu')
    .content-box
      .content
        - foreach ($this->get('content_items') as $news_item_style => $item)
          .news-item-box.$news_item_style
            .icons
              - $this->_includeSquares($item['icons'])
            .category= $item['category']
            .clear
            .date= $item['date']
            .title= $item['title']
            .text= $item['text']
  .abc-right
    - $this->_include('title')
    .pic-box
      .pic-box-inner
        .pic
      .pic-box-inner.pic-right
        .pic
      .clear
  .clear